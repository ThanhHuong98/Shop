<% include ../../partials/head.ejs %>
<link rel="stylesheet" type="text/css" href="/profileEdit/css/style.css">
<link rel="stylesheet" type="text/css" href="/profileEdit/css/responsive.css">
<style>
    #password-change {
        font-weight: 300;
        color: #2E86DE;
        font-size: 14px;
        text-decoration: underline;
        cursor: pointer;
    }

    .password-change-active {
        color: #EC501F !important;
    }

    #password-input {
        border-top: 1px solid #9E9D9D;
        border-bottom: 1px solid #9E9D9D;
        padding-top: 31px;
        margin-bottom: 14px;
        display: none;
    }
</style>
<% include ../../partials/header.ejs %>
<div class="super_container_inner">
    <div class="super_overlay"></div>

    <div id="content" class="row">
        <div class="col-lg-6 account-box-container">
            <div id="account-box">
                <div id="name">
                    <p><%=account.name%></p>
                </div>
                <div class="option">
                    <a href="/edit-profile">
                        <p>Thông tin tài khoản</p>
                    </a>
                </div>
                <div class="option">
                    <a href="/order-management">
                        <p>Quản lý đơn hàng</p>
                    </a>
                </div>
                <div class="option" id="last">
                    <a href="/logout">
                        <p>Đăng xuất</p>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-6 content-box-container">
            <form method="POST" action="/edit-profile/<%=account._id%>" id="edit-profile-form">
                <div id="content-box">
                    <div class="input-row">
                        <p class="input-title">Họ và tên</p>
                        <input class="typing-input" type="text" name="name" placeholder="<%=account.name%>" id="edit-name-input">
                    </div>
                    <div class="input-row">
                        <p class="input-title">Số điện thoại</p>
                        <input class="typing-input" type="text" name="phone" placeholder="<%=account.phone%>" id="edit-phone-input">
                    </div>
                    <div class="input-row">
                        <p class="input-title">Địa chỉ</p>
                        <input class="typing-input" type="text" name="address" placeholder="<%=account.address%>" id="edit-address-input">
                    </div>
                    <div class="input-row">
                        <p class="input-title">Email</p>
                        <input class="typing-input" type="text" placeholder="<%=account.email%>" disabled>
                    </div>
                    <div class="input-row">
                        <p class="input-title">Mật khẩu</p>
                        <p id="password-change">Thay đổi</p>
                    </div>
                    <div id="password-input">
                        <div class="input-row">
                            <p class="input-title">Mật khẩu cũ</p>
                            <input class="typing-input" name="oldpass" type="password" id="edit-old-pass-input">
                        </div>
                        <div class="input-row">
                            <p class="input-title">Mật khẩu mới</p>
                            <input class="typing-input" name="newpass" type="password" id="new-pass">
                        </div>
                        <div class="input-row">
                            <p class="input-title">Xác nhận mật khẩu mới</p>
                            <input class="typing-input" type="password"  id="confirm-password-edit">
                        </div>                        
                    </div>
                    <div class="input-row" style="font-size: 14px;color:#EC501F;padding-left: 9px;" id="edit-profile-alert"></div>
                    <div id="input-row-last">
                        <button type="submit" class="btn btn-dark button" style="border-radius: 0px;" id="edit-profile-submit-btn" data-id="<%=account._id%>" data-email="<%=account.email%>">CẬP NHẬT</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    
</script>

<% include ../../partials/footer.ejs %>